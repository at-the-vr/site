---
import Layout from "@layouts/Default.astro";
import RecentBlogPosts from "@components/generic/RecentBlogPosts.astro";
import MobileSocials from "@components/home/MobileSocials.astro";
import { Pill } from "@eliancodes/brutal-ui";
import { Card } from "@eliancodes/brutal-ui";
import Link from "@components/generic/Link.astro";

const myInterests = [
  { name: "Astro", url: "https://astro.build/" },
  {
    name: "Starlight",
    url: "https://starlight.astro.build/showcase/",
  },
  {
    name: "CLI Prompts",
    url: "https://github.com/natemoo-re/clack/tree/main/packages/prompts#readme",
  },
];
---

<Layout
  title="Home"
  pageTitle="AtharvaTypes |Â Home"
  description="Support Patrol @Astro | Web + Content Team @DevsInTech | Frontend Enthusiast | Documentation Fanatic"
>
  <main class="bg-pink p-6">
    <MobileSocials />
    <section id="about" class="grid md:grid-cols-6 gap-8 mt-4">
      <div class="flex flex-col md:col-span-6">
        <Card>
          <div class="flex flex-col justify-between items-start gap-4">
            <p class="mt-4 outfit text-2xl md:text-5xl lg:text-7xl">
              &lt; TODO /&gt;
            </p>
            <p class="mt-2 outfit text-xl md:text-3xl lg:text-5xl">
              <span class="text-white">#</span>Translating
              <Link
                where="https://docs.astro.build/hi/getting-started/"
                what="Astro Docs"
              />
              <span>&</span>
              <Link
                where="https://starlight.astro.build/hi/"
                what="Starlight Docs"
              />
            </p>
            <p class="mt-2 outfit text-xl md:text-3xl lg:text-5xl">
              <span class="text-white">#</span> Writing
              <Link
                where="https://convelations.vercel.app/"
                what="Convelations"
              />
            </p>
            <p class="mt-2 outfit text-xl md:text-3xl lg:text-5xl">
              <span class="text-white">#</span> Designing <Link
                where="https://www.npmjs.com/package/who-atharva"
                what="My custom CLI Portfolio"
              />
            </p>
          </div>
        </Card>
      </div>
    </section>
    <section class="mt-8 grid md:grid-cols-2 gap-8">
      <div class="md:col-span-10">
        <Card>
          <h2 class="text-2xl md:text-4xl lg:text-6xl mb-8 dm-serif">
            My Interests
          </h2>
          <ul class="flex gap-4 flex-wrap">
            {
              myInterests.map((item) => (
                <li>
                  <Pill>
                    <a
                      class="sanchez p-3"
                      href={item.url}
                      target="_blank"
                      title={`Go to ${item.name}`}
                    >
                      {item.name}
                    </a>
                  </Pill>
                </li>
              ))
            }
          </ul>
        </Card>
      </div>
    </section>
    <RecentBlogPosts />
  </main>
</Layout>
