---
import Layout from "@layouts/Default.astro";
import RecentBlogPosts from "@components/generic/RecentBlogPosts.astro";
import MobileSocials from "@components/home/MobileSocials.astro";
import { Pill } from "@eliancodes/brutal-ui";
import { Card } from "@eliancodes/brutal-ui";
import { Image } from "astro:assets";
import headshot from "../assets/atharva-headshot.jpg";

const myInterests = [
  { name: "Astro", url: "https://astro.build/" },
  {
    name: "Starlight",
    url: "https://starlight.astro.build/showcase/",
  },
  {
    name: "CLI Prompts",
    url: "https://github.com/at-the-vr/my-cli-portfolio",
  },
  {
    name: "Tailwind Sites",
    url: "https://www.awwwards.com/websites/tailwind/",
  },
];
---

<Layout
  title="Home"
  pageTitle="Atharva Types |¬†Home"
  description="Support Patrol @Astro | Web + Content Team @DevsInTech | Frontend Enthusiast | Documentation Fanatic"
>
  <main class="bg-pink p-6">
    <MobileSocials />
    <section id="about" class="grid md:grid-cols-8 gap-8 mt-4">
      <div class="flex flex-col md:col-span-6">
        <Card>
          <div class="flex flex-col justify-between items-start gap-4">
            <p class="mt-4 outfit text-2xl md:text-5xl lg:text-7xl">
              &lt; TODO /&gt;
            </p>
            <p class="mt-2 outfit text-xl md:text-3xl lg:text-5xl">
              <span class="text-white">#</span>Translating
              <a
                href="https://docs.astro.build/hi/getting-started/"
                class="hover:color-white transition-colors">Astro Docs</a
              >
              <span>&</span>
              <a
                href="https://starlight.astro.build/hi/"
                class="hover:color-white transition-colors">Starlight</a
              >
            </p>
            <p class="mt-2 outfit text-xl md:text-3xl lg:text-5xl">
              <span class="text-white">#</span> Writing
              <a
                href="https://convelations.vercel.app/"
                class="hover:color-white transition-colors">Convelations</a
              >
            </p>
            <p class="mt-2 outfit text-xl md:text-3xl lg:text-5xl">
              <span class="text-white">#</span> Designing
              <a
                href="https://github.com/at-the-vr/my-cli-portfolio"
                class="hover:color-white transition-colors"
                >My custom CLI Portfolio</a
              >
            </p>
          </div>
        </Card>
      </div>
      <Image
        class="object-cover h-full w-full rounded-lg md:col-span-2 border-3 border-black card-shadow"
        src={headshot}
        alt="Elian Van Cutsem"
        width={headshot.width}
        height={headshot.height}
      />
    </section>
    <section class="mt-8 grid md:grid-cols-2 gap-8">
      <div class="flex flex-col gap-8">
        <Card>
          <h2 class="text-2xl md:text-4xl lg:text-6xl mb-8 dm-serif">
            My Interests
          </h2>
          <ul class="flex gap-4 flex-wrap">
            {
              myInterests.map((item) => (
                <li>
                  <Pill>
                    <a
                      class="sanchez p-3 text-[16px]"
                      href={item.url}
                      target="_blank"
                      title={`Go to ${item.name}`}
                    >
                      {item.name}
                    </a>
                  </Pill>
                </li>
              ))
            }
          </ul>
        </Card>
      </div>
      <Card>
        <h2 class="text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif">
          Who am I?
        </h2>
        <p class="poppins text-lg">
          Hi, I‚Äôm Atharva, a frontend enthusiast & a documentation fanatic
          currently looking for new opportunities in frontend engineering. I am
          passionate for developing seamless accessible UIs benefittable in the
          society
        </p>
        <p class="poppins mt-2 text-lg">
          Nowadays you can find me roaming in <a
            href="https://astro.build/chat"
            class="hover:text-white">Astro Lounge</a
          > or on GitHub building some random sh*t
        </p>
        <p class="poppins mt-2 text-lg">
          I possess industrial internship experience of 11 Months in VueJs where
          I was primarily designing as you guesssed User Interfaces üòÅ, Since
          then I have moved to Astro and NextJs. I'm open to discussing any
          potential collaborations or opportunities, so please feel free to
          reach out to me.
        </p>
      </Card>
    </section>
    <RecentBlogPosts />
  </main>
</Layout>
