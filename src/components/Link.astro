---
interface Props {
  color?: string | undefined;
  where: string;
  what: string;
  target?: string;
}
import colors from "../../colors.json";

if (Astro.props.color === undefined) {
  Astro.props.color = colors[Math.floor(Math.random() * colors.length)];
}

const { color, where, target = "_blank", what } = Astro.props;
---

<style define:vars={{ color: color }}>
  a {
    background-image: linear-gradient(
      to right,
      var(--color),
      var(--color) 50%,
      #000 50%
    );
    background-size: 200% 100%;
    background-position: -100%;
    display: inline-block;
    padding: 5px 0;
    position: relative;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    transition: all 0.3s ease-in-out;
  }

  a:before {
    content: "";
    background: var(--color);
    display: block;
    position: absolute;
    bottom: -3px;
    left: 0;
    width: 0;
    height: 3px;
    transition: all 0.3s ease-in-out;
  }

  a:hover {
    background-position: 0;
  }

  a:hover::before {
    width: 100%;
  }
</style>

<a href={where} target={target}>{what}</a>
